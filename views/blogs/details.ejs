<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="content">

        I am blog <%= blog._id %>

        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
            <div>
                <h2><%= blog.title %></h2>

                <div class="blog-details-snippet">
                    <%= blog.snippet %>
                </div>

                <div class="blog-details-body">
                    <%= blog.body %>
                </div>
            </div>

            <div>
                <div class="delete-icon-wrapper">
                    <span class="delete-icon">
                        <a onclick="return handleDeleteClick('<%= blog._id %>')">
                            <img src="/images/trashcan.svg" alt="Delete">
                        </a>
                    </span>
                </div>
            </div>
        </div>

    </div>
    
    <%- include('../partials/footer.ejs') %>

    <script>
        function handleDeleteClick(blog_id) {
            if(!confirm('Delete this blog?')) {
                return false;
            }

            console.log('deleting '+blog_id+'...');

            const endpoint = '/blogs/'+blog_id;

            fetch(endpoint, {
                method: 'DELETE'
            })
            .then((response) => response.json())
            .then((data) => {
              window.location = data.redirect;
            })
            .catch((error) => {
                console.log(error);
            });
        }
    </script>
</body>
</html>